{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recommended-vue"
  ],
  "rules": {
    "no-descending-specificity": null,
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes",
          "compose-with"
        ]
      }
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": [
          "/mask/"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "**/*.(t|j)s",
    "dist/**/*"
  ]
}
